<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Settings"
    android:background="@color/light_red">

    <include android:id="@+id/i_toolbar" layout="@layout/layout_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_page_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_round_top_white"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:paddingTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/ll_visiting_card_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visiting Card Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_greeting_card_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Greeting Card Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_privacy_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_display_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_block_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block List"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notification_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_grey"
            android:padding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications Settings"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:layout_weight=".98"/>

            <ImageView
                android:layout_width="@dimen/_7sdp"
                android:layout_height="@dimen/_7sdp"
                android:src="@drawable/ic_ios_arrow_back"
                android:layout_gravity="right"
                android:layout_weight=".02"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/ic_sign_out"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_4sdp"
                android:text="Sign Out"
                android:textColor="@color/light_red"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>