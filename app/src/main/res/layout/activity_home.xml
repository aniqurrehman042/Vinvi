<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateNewVisitingCard"
    android:background="@color/light_red">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="@dimen/size_back_button"
        android:layout_height="@dimen/size_back_button"
        android:layout_marginTop="@dimen/margin_back_button"
        android:layout_marginLeft="@dimen/margin_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ic_back_arrow"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_home_button"
        android:layout_width="@dimen/size_back_button"
        android:layout_height="@dimen/size_back_button"
        android:layout_marginRight="@dimen/margin_back_button"
        app:layout_constraintTop_toTopOf="@+id/iv_back_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_home"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/iv_location_button"
        android:layout_width="@dimen/size_back_button"
        android:layout_height="@dimen/size_back_button"
        app:layout_constraintTop_toTopOf="@+id/iv_home_button"
        app:layout_constraintRight_toLeftOf="@id/iv_home_button"
        app:srcCompat="@drawable/ic_location"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/tv_create_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_top_bar_text"
        android:textStyle="bold"
        android:textSize="@dimen/text_top_bar"
        android:text="Create new Visiting Card" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_new"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_round_top_white"
        android:layout_marginTop="@dimen/_5sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingTop="@dimen/_20sdp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_edittext"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_weight="0.75"
                android:background="@drawable/bg_grey_border_circle"
                android:drawableLeft="@drawable/ic_search"
                android:hint=" Search Visiting Card"
                android:textColorHint="@color/light_grey"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:maxLength="15" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintHorizontal_weight="0.25"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/et_search"
                app:layout_constraintTop_toTopOf="@+id/et_search"
                app:layout_constraintBottom_toBottomOf="@+id/et_search"
                android:textSize="@dimen/_8ssp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="Search"
                android:textColor="@color/light_red"
                android:background="@drawable/bg_round_red_border"
                android:paddingHorizontal="@dimen/_10sdp"/>

            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/et_search"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.tabs.TabLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.viewpager.widget.ViewPager>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>